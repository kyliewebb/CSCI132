package paint;
import java.awt.Color;
import java.awt.event.*;
import javax.swing.*;
import java.awt.Graphics;



public class Buttons extends JPanel implements MouseListener, ActionListener 
{
    private JPanel bpanel; //button panel
    int x,y,w,h;
    Graphics g;
    JButton clear, frectangle, foval, rectangle, oval, line;    
    Canvas canvas;
    
    public Buttons()
    {
        super();
        canvas = new Canvas();
        setBackground(Color.lightGray);
        
        JButton clear = new JButton("CLEAR");
        clear.addActionListener(this);
        JButton frectangle = new JButton("FILLED RECTANGLE");
        frectangle.addActionListener(this);
        JButton foval = new JButton("FILLED OVAL");
        foval.addActionListener(this);
        JButton rectangle = new JButton("RECTANGLE");
        rectangle.addActionListener(this);
        JButton oval = new JButton("OVAL");
        oval.addActionListener(this);
        JButton line = new JButton("LINE");
        line.addActionListener(this);

        add(clear);
        add(frectangle);
        add(foval);
        add(rectangle);
        add(oval);
        add(line);
    } 
    public void actionPerformed(ActionEvent e)
    {
        Object active = e.getSource();
        
        if(active.equals(clear))
        {
            canvas.setAction("clear");
                    canvas.repaint();
        }
        
        else if (active.equals(frectangle))
        {
            Canvas.setAction(frectangle);
        }
        
        else if (active.equals(foval))
        {
            Canvas.setAction = foval;
        }
        
        else if (active.equals(rectangle))
        {
            Canvas.setAction = rectangle;
        }
        
        else if (active.equals(oval))
        {
            Canvas.setAction = oval;
        }
        
        else if (active.equals(line))
        {
            Canvas.setAction = line;
        }
    }
}
